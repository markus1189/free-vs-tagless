    \begin{beamercolorbox}[wd=.31\paperwidth,ht=2.25ex,dp=-2ex,center]{date in head/foot}%
    \includegraphics[height=2.1mm]{../static-images/cc-logo.png}
  \end{beamercolorbox}%
  \hspace{2ex}
